# Backend specific gitattributes

# All text files should use LF line endings
* text=auto eol=lf

# Backend specific files
*.js text
*.json text
*.md text
*.env* text

# Node.js files
server.js text
*.route.js text
*.controller.js text
*.model.js text
*.middleware.js text
package.json text
package-lock.json text

# Configuration files
ecosystem.config.js text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
uploads/** binary
